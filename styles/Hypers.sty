		\usepackage[xetex]{hyperref} 
		% настройка ссылок в оглавлении для pdf формата 
			\hypersetup{ 
				pdfborder    = {0 0 0}, 
				bookmarks = true,
				bookmarksopen, 
				bookmarksopenlevel = 2, 
				pdftoolbar=true,        % показать тулбар (Acrobat)?
				pdfmenubar=true,        % показать меню (Acrobat)
				pdfnewwindow=true,      % ссылки в новых окнах		
				colorlinks=true, % установка цвета ссылок в оглавлении 
				citecolor=red,  
				filecolor=magenta, 
				linkcolor=blue, 
				urlcolor=blue 	
			} 
	
