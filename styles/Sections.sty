%%%

%%%
%%% Раздел без нумерации
%%%

	\newcommand{\Csection}[1]{
		\cleardoublepage %
		\phantomsection %
		\addcontentsline{toc}{section}{#1} %
		\section*{#1} %
	}

%%%
%%% Надраздел для статей
%%%

	\newcommand{\supersection}[1]{
		\cleardoublepage %
		\phantomsection %
		\addcontentsline{toc}{part}{#1} %
		\part*{#1} %
	}

%%%
%%% Раздел для вычислительной практики
%%%

	\newcommand{\CpSection}[2]{ %
		%\cleardoublepage %
		\clearpage %
		\phantomsection %
		\addcontentsline{toc}{section}{#1 #2}
		\begin{center} %
			\section*{{\large \uppercase{#1}}} %
			\textbf{#2} %
		\end{center}
	}

%%%
%%% Раздел для вычислительной практики с подчеркиванием
%%%

	\newcommand{\CpDetail}[1]
	{
		\clearpage %
		\phantomsection %
		\addcontentsline{toc}{section}{#1} %
		\begin{center}
			\section*{\underline{\normalsize \uppercase{#1}}} 
		\end{center}
	}

%%%
%%% Подраздел для вычислительной практики с подчеркиванием
%%%

	\newcommand{\cpsubsection}[1]{ %
		\begin{center}\section{{\large #1}}
		\end{center}
	}

