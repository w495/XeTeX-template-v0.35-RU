	\newcommand{\STYLES}{styles}			% месторасположение стилей
	\newcommand{\SOURCES}{\STYLES/Sources}	% месторасположение 
											% собственного описания языков
	\newcommand{\ALGS}{\STYLES/Algs}	% месторасположение 
											% собственного описания языков											
	\newcommand{\IMG}{img}					% растровых изображений
	\newcommand{\SRC}{src}					% включаемых фалов с раметкой

	
	\newcommand{\MAIN}{template}	% имя главного файла,
									% наверно глупо, это прописывать, 
									% но имя может иногда встречаться в тексте

